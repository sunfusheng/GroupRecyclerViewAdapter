<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/drawable_list_item_selector"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="@dimen/list_item_margin_left_right"
    android:paddingRight="@dimen/list_item_margin_left_right">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_item_margin_top_bottom_small">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/new_message_voice"
            android:textColor="@color/font1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/little_apple"
            android:textColor="@color/font2"
            android:textSize="14sp" />
    </RelativeLayout>

    <include
        layout="@layout/divider_1px"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/list_item_margin_top_bottom_small" />

</LinearLayout>